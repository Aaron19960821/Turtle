<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lesson_image_view"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/lesson_icon_width"
        android:layout_height="@dimen/lesson_icon_height"
        android:src="@mipmap/turtle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lesson_text_padding"
        android:layout_marginRight="@dimen/lesson_text_padding"
        android:layout_below="@id/lesson_image_view"
        android:textSize="@dimen/lesson_text_size"
        android:text="@string/lesson_no_explaination" />

</RelativeLayout>