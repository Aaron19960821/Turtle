<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/overview_historyitem_height"
        android:id="@+id/listitem_background"
        android:background="@color/colorPrimary"
        android:alpha=".6"/>

    <TextView
        android:id="@+id/listitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/overview_historyitem_padding"
        android:layout_centerVertical="true"
        android:textSize="@dimen/overview_historyitem_textsize"
        android:textColor="@color/textWhite" />

    <TextView
        android:id="@+id/listitem_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/overview_historyitem_padding"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/overview_historyitem_textsize"
        android:textColor="@color/textWhite" />

    <View
        android:id="@+id/listitem_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/overview_historyitem_height"
        android:layout_alignBaseline="@id/listitem_background"/>

</RelativeLayout>